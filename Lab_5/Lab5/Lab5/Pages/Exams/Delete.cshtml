@page
@model Lab5.Pages.Exams.DeleteModel

@{
    ViewData["Title"] = "Видалити запис";
}

<h1>Видалення запису</h1>

<h3>Ви впевнені, що хочете видалити цей запис?</h3>
<div>
    <h4>Exam</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Exam.Student)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Exam.Student.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Exam.Subject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Exam.Subject.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Exam.Teacher)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Exam.Teacher.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Exam.Mark)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Exam.Mark)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Exam.Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-page="./Index">Назад до списку</a>
    </form>
</div>
