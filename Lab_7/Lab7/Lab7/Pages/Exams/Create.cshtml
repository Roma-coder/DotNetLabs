@page
@model Lab5.Pages.Exams.CreateModel

@{
    ViewData["Title"] = "Додати запис";
}

<h1>Додати запис</h1>

<h4>Exam</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Exam.StudentId" class="control-label">Студент</label>
                <select asp-for="Exam.StudentId" class ="form-control" asp-items="ViewBag.StudentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Exam.SubjectId" class="control-label">Предмет</label>
                <select asp-for="Exam.SubjectId" class ="form-control" asp-items="ViewBag.SubjectId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Exam.TeacherId" class="control-label">Вчитель</label>
                <select asp-for="Exam.TeacherId" class ="form-control" asp-items="ViewBag.TeacherId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Exam.Mark" class="control-label"></label>
                <input asp-for="Exam.Mark" class="form-control" />
                <span asp-validation-for="Exam.Mark" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Назад до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
